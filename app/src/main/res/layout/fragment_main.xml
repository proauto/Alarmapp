<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c758e"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/settingbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@mipmap/seticon"/>

        <Button
            android:id="@+id/alarmbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/menuicon2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
        <TextView
            android:id="@+id/clockposition"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/clockposition"/>-->

        <creativestudioaq.alarmapp.ui_element.AnalogClockView

            android:layout_marginTop="50dp"
            android:id="@+id/clock"
            android:layout_width="240dp"
            android:layout_height="285dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/rabbitbutton"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/animation" />

        <TextView
            android:id="@+id/rabbitTongue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rabbitbutton"
            android:layout_marginLeft="-15dp"
            android:padding="5dp"
            android:background="@mipmap/noline1"
            android:gravity="center"
            android:visibility="invisible"/>

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
