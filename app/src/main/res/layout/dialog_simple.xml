    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/simple_tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#000000"
            android:background="@drawable/whiterectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="시간"/>

        <TextView
            android:id="@+id/simple_tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#000000"
            android:background="@drawable/whiterectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="분"/>


    </LinearLayout>

    <TextView
        android:id="@+id/simple_guide_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:text="뒤에 알람이 울립니다"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/simple_button_plus_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="simpleTimeSelect"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="+1"/>

        <Button
            android:id="@+id/simple_button_plus_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="simpleTimeSelect"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="+5"/>

        <Button
            android:id="@+id/simple_button_plus_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="simpleTimeSelect"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="+10"/>

        <Button
            android:id="@+id/simple_button_plus_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="simpleTimeSelect"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="+60"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/simple_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:onClick="DialogFinishClick"
            android:text="취소"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC"/>

        <Button
            android:id="@+id/simple_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#222526"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:onClick="DialogFinishClick"
            android:text="확인"/>

    </LinearLayout>


</LinearLayout>